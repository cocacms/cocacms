<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ __('test') }}</title>
</head>
<body>
  <h1>{{ __('test') }}</h1>

  <ul>
    {% list name="site", pageSize=99999 %}
      <li>
        {{ __('site') }}：<a href="?_site_={{ item.id }}">{{ item.name }}</a>
        {% if (ctx.site.id === item.id) %}
          [*]
        {% endif %}
      </li>
      {% nodata %}
      <p>{{ __('empty') }}</p>
    {% endlist %}
  </ul>

  <h2>{{ __('title') }}</h2>

  <form action="">
    <input type="text" name="key" value="{{ ctx.query.key }}" placeholder="请输入要搜索关键字">
    <input type="submit">
  </form>
  <ul>
    {% list name="test", model=true, where=[
      ['name,desc,content', 'match', ctx.query.key ]
    ] %}
      <li>{{ loop.index }}、<a href="?id={{ item.id }}">{{ item.name }}</a></li>
      {% nodata %}
      <p>{{ __('empty') }}</p>
      {% pager %}
      {% set _pager = _pager %}
    {% endlist %}
  </ul>

  <p>{{ __('pager', _pager.pageCount, _pager.page, _pager.pageSize)}}</p>

  <h2>{{ __('article') }}</h2>

  {% single name="test", model=true, where=[['id', ctx.query.id]] %}
    <h3>{{ item.name }}</h3>
    <div>
      {{ item.content | safe }}
    </div>
    {% nodata %}
    <p>{{ __('empty') }}</p>
  {% endsingle %}

</body>
</html>
